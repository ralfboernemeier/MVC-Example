<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="413.0" prefWidth="478.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.ralfb_web.ui.MainController">
   <children>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="478.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Database Connection Test">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="478.0">
         <children>
            <TextField fx:id="host" prefHeight="30.0" prefWidth="350.0" promptText="IP-Address or Hostname" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="478.0">
         <children>
            <TextField fx:id="port" prefHeight="30.0" prefWidth="350.0" promptText="Listener Port" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="478.0">
         <children>
            <TextField fx:id="sid" prefHeight="30.0" prefWidth="350.0" promptText="Database SID" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="478.0">
         <children>
            <TextField fx:id="user" prefHeight="30.0" prefWidth="350.0" promptText="DB User" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="478.0">
         <VBox.margin>
            <Insets left="15.0" right="5.0" />
         </VBox.margin>
         <children>
            <PasswordField fx:id="password" prefHeight="30.0" prefWidth="350.0" promptText="DB User Password" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextArea fx:id="messages" prefHeight="100.0" prefWidth="450.0" />
         </children>
         <VBox.margin>
            <Insets left="15.0" right="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="478.0">
         <children>
            <Button fx:id="connectDB" mnemonicParsing="false" onAction="#connectButtonTapped" text="Connect Database" />
            <Button fx:id="exit" mnemonicParsing="false" onAction="#exitButtonTapped" text="EXIT">
               <HBox.margin>
                  <Insets left="270.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="15.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
